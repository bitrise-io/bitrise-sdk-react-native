{
  "name": "@bitrise/react-native-sdk",
  "version": "0.2.0",
  "description": "Lightweight React Native SDK for Bitrise Release Management with code push functionality",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "app.plugin": "./app.plugin.js",
  "exports": {
    ".": {
      "types": "./lib/index.d.ts",
      "default": "./lib/index.js"
    },
    "./plugin": {
      "types": "./plugin/build/index.d.ts",
      "default": "./plugin/build/index.js"
    }
  },
  "files": [
    "lib",
    "ios",
    "android",
    "plugin/build",
    "plugin/README.md",
    "app.plugin.js",
    "react-native.config.js",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "npm run build:sdk && npm run build:plugin",
    "build:sdk": "tsc",
    "build:plugin": "tsc --project plugin/tsconfig.json",
    "test": "jest",
    "test:watch": "jest --watch",
    "typecheck": "tsc --noEmit && tsc --project plugin/tsconfig.json --noEmit",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx}\"",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "bitrise",
    "react-native",
    "codepush",
    "release-management",
    "over-the-air",
    "ota"
  ],
  "author": "Bitrise",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/bitrise-io/bitrise-sdk-react-native.git"
  },
  "peerDependencies": {
    "expo": ">=50.0.0",
    "react": ">=16.8.0",
    "react-native": ">=0.72.0"
  },
  "peerDependenciesMeta": {
    "expo": {
      "optional": true
    }
  },
  "devDependencies": {
    "@babel/core": "^7.23.7",
    "@babel/preset-env": "^7.23.8",
    "@babel/preset-typescript": "^7.23.3",
    "@expo/config-plugins": "^7.9.2",
    "@react-native/babel-preset": "^0.73.21",
    "@react-native/eslint-config": "^0.74.0",
    "@testing-library/react-native": "^12.4.3",
    "@types/jest": "^29.5.11",
    "@types/react": "^18.2.48",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "babel-jest": "^29.7.0",
    "eslint": "^8.56.0",
    "eslint-plugin-prettier": "^5.1.3",
    "expo": "^50.0.21",
    "jest": "^29.7.0",
    "prettier": "^3.2.4",
    "react": "^18.2.0",
    "react-native": "^0.73.2",
    "react-test-renderer": "^18.2.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
